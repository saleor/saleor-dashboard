{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["ES2020", "dom", "esnext"],
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "strict": false,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "typescript-strict-plugin"
      }
    ],
    "paths": {
      "@assets/*": ["assets/*"],
      "@locale/*": ["locale/*"],
      "@dashboard/*": ["src/*"],
      "@test/*": ["testUtils/*"],
      "@storybookUtils/*": ["storybookUtils/*"],
      "@mizdra/graphql-codegen-typescript-fabbrica/helper": [
        "node_modules/@mizdra/graphql-codegen-typescript-fabbrica/dist/esm/helper/index"
      ]
    }
  },
  "exclude": ["node_modules", "playwright"]
}
