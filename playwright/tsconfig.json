{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": ["es2020", "dom", "esnext"],
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "es2020",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "paths": {
      "@pages/*": ["./pages/*"],
      "@api/*": ["./api/*"],
      "@data/*": ["./data/*"]
    }
  }
}
