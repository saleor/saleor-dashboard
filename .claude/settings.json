{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/block-npm-test.py"
          }
        ]
      },
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/check-as-any-pre.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/graphql-check.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/validation-check.sh"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "dashboard-playwright@saleor-dashboard-plugins": true
  },
  "extraKnownMarketplaces": {
    "saleor-dashboard-plugins": {
      "source": {
        "source": "file",
        "path": ".claude/plugins/.claude-plugin/marketplace.json"
      }
    }
  }
}
