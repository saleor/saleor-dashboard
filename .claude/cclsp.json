{
  "servers": [
    {
      "extensions": ["js", "ts", "jsx", "tsx"],
      "command": ["npx", "--", "typescript-language-server", "--stdio"],
      "rootDir": "."
    },
    {
      "extensions": ["js", "ts", "jsx", "tsx", "mjs", "cjs", "mts", "cts"],
      "command": ["npx", "--", "vscode-eslint-language-server", "--stdio"],
      "rootDir": "."
    },
    {
      "extensions": ["py", "pyi"],
      "command": ["uvx", "--from", "python-lsp-server", "pylsp"],
      "rootDir": ".",
      "restartInterval": 5,
      "initializationOptions": {
        "settings": {
          "pylsp": {
            "plugins": {
              "jedi_completion": {
                "enabled": true
              },
              "jedi_definition": {
                "enabled": true
              },
              "jedi_hover": {
                "enabled": true
              },
              "jedi_references": {
                "enabled": true
              },
              "jedi_signature_help": {
                "enabled": true
              },
              "jedi_symbols": {
                "enabled": true
              },
              "pylint": {
                "enabled": false
              },
              "pycodestyle": {
                "enabled": false
              },
              "pyflakes": {
                "enabled": false
              },
              "yapf": {
                "enabled": false
              },
              "rope_completion": {
                "enabled": false
              }
            }
          }
        }
      }
    }
  ]
}
